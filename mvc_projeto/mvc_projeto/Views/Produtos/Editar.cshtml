@{
    ViewBag.Title = "Atualizar produto";
    busnises.Produtos p = ViewBag.conteudo;
}

<div class="jumbotron">
    <a href="/Produtos/Index" class="btn btn-default">Lista de produtos</a><br /><br />
    <form action="Atualizar" method="post">
        <div class="form-group">
            <label> ID</label>
            <input type="text" value="@p.id" name="id" />
        </div>
        <div class="form-group">
            <label> nome</label>
            <input type="text" value="@p.nome" name="nome" />
        </div>
        <div class="form-group">
            <label> Quantidade</label>
            <input type="text" value="@p.quantidade" name="quantidade" />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>